{
  "name": "yodo",
  "private": true,
  "version": "1.0.5",
  "type": "module",
  "scripts": {
    "dev": "pnpm run kill-emulator && npm-run-all -p dev:*",
    "dev:emulator": "firebase emulators:start --import=./emulator-data --export-on-exit=./emulator-data",
    "dev:web": "pnpm run prebuild && vite",
    "build": "pnpm run prebuild && tsc -b && vite build",
    "lint": "npm-run-all lint:*",
    "lint:eslint": "biome lint .",
    "lint:cspell": "cspell lint \"**/*.{ts,json,js,md,tsx}\"",
    "lint-fix": "biome lint --fix",
    "prebuild": "tsx ./src/scripts/prebuild.ts",
    "translations": "tsx ./src/scripts/check-unused-translations.ts",
    "preview": "vite preview",
    "cypress:e2e": "cypress open --e2e --browser chrome",
    "kill-emulator": "npx kill-port 9099 5010 9199 8090 8091 8080 5001",
    "prepare": "husky"
  },
  "dependencies": {
    "@formkit/auto-animate": "^0.8.2",
    "@headlessui/tailwindcss": "^0.2.1",
    "@radix-ui/react-checkbox": "^1.1.2",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.2",
    "@remixicon/react": "^4.3.0",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "firebase": "^10.14.1",
    "localforage": "^1.10.0",
    "mixpanel-browser": "^2.55.1",
    "next-themes": "^0.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.27.0",
    "tailwind-merge": "^2.5.4",
    "tailwind-variants": "^0.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.3",
    "@tailwindcss/forms": "^0.5.9",
    "@types/glob": "^8.1.0",
    "@types/mixpanel-browser": "^2.50.1",
    "@types/node": "^22.7.6",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.2",
    "autoprefixer": "^10.4.20",
    "cspell": "^8.15.3",
    "cypress": "^13.15.0",
    "dotenv": "^16.4.5",
    "glob": "^11.0.0",
    "globals": "^15.11.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.47",
    "sass": "^1.80.1",
    "tailwindcss": "^3.4.14",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.9.0",
    "vite": "^5.4.9",
    "vite-tsconfig-paths": "^5.0.1"
  },
  "engines": {
    "node": "20",
    "pnpm": ">=9.7"
  },
  "lint-staged": {
    "*.{ts,js,tsx}": [
      "biome lint"
    ],
    "*.{ts,json,js,md,tsx}": [
      "cspell lint --config ./cspell.json"
    ]
  }
}
