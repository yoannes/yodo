{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "files": {
    "ignore": [
      "**/dist",
      "**/*.md",
      "**/.vscode/",
      ".build/*",
      "cypress/e2e/_advanced-examples/**"
    ]
  },
  "formatter": {
    "attributePosition": "auto",
    "enabled": true,
    "formatWithErrors": false,
    "ignore": [
      "**/.cache",
      "**/package-lock.json",
      "**/pnpm-lock.yaml",
      "**/public",
      "**/node_modules",
      "cypress/e2e/_advanced-examples/**"
    ],
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "always",
      "attributePosition": "auto",
      "bracketSameLine": false,
      "bracketSpacing": true,
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "quoteStyle": "double",
      "semicolons": "always",
      "trailingCommas": "all"
    }
  },
  "linter": {
    "enabled": true,
    "ignore": [
      "**/dist",
      "**/.eslintrc.cjs",
      "**/*.md",
      "**/.vscode/",
      "src/hooks/i18n/index.ts",
      ".build/*",
      "cypress/e2e/_advanced-examples/**"
    ],
    "rules": {
      "recommended": false,
      "suspicious": {
        "noConsoleLog": "warn"
      }
    }
  },
  "organizeImports": {
    "enabled": true
  }
}
